                                        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" Text="27" FontSize="18" FontWeight="Bold"/>
                                    </Grid>

                                    <Grid Width="52" Height="52" Margin="0,0,23,0" >
                                        <Ellipse x:Name="el_bit28" Stroke="Silver" StrokeThickness="2"/>
                                        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" Text="28" FontSize="18" FontWeight="Bold"/>
                                    </Grid>

                                    <Grid Width="52" Height="52" Margin="0,0,23,0" >
                                        <Ellipse x:Name="el_bit29" Stroke="Silver" StrokeThickness="2"/>
                                        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" Text="29" FontSize="18" FontWeight="Bold"/>
                                    </Grid>

                                    <Grid Width="52" Height="52" Margin="0,0,23,0" >
                                        <Ellipse x:Name="el_bit30" Stroke="Silver" StrokeThickness="2"/>
                                        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" Text="30" FontSize="18" FontWeight="Bold"/>
                                    </Grid>

                                    <Grid Width="52" Height="52" Margin="0,0,23,0" >
                                        <Ellipse x:Name="el_bit31" Stroke="Silver" StrokeThickness="2"/>
                                        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center" Text="31" FontSize="18" FontWeight="Bold"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!--Tab Helfer-->
            <TabItem Header="{x:Static p:Resources.ti_helfer}">
                <Grid Margin="0,7,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBox x:Name="text_projktpfad_helfer" Grid.Column="0" Grid.Row="0" Controls:TextBoxHelper.Watermark="{x:Static p:Resources.tb_proj_auswahlen}" Margin="0" 
                             Width="300" VerticalContentAlignment="Center">
                    </TextBox>

                    <ComboBox  x:Name="cb_select_me" Grid.Column="2" Grid.Row="0" Width="180" Margin="30,0,0,0" DropDownOpened="Cb_select_me_DropDownOpened" Controls:TextBoxHelper.Watermark="Bitte ME auswählen..."/>

                    <Button x:Name="btn_pfad_helfer_auswahlen" Grid.Row="0" Grid.Column="1" Width="30" Height="30" HorizontalAlignment="Left" Click="Btn_pfad_helfer_auswahlen_Click">
                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto"/>
                    </Button>

                    <!--Datein öffnen Allgemein-->
                    <GroupBox Grid.Column="0" Grid.Row="2" Header="{x:Static p:Resources.gb_datei_funktion}" Grid.ColumnSpan="4">
                        <GroupBox.Resources>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButton}">
                                <!--<Setter Property="Background" Value="{DynamicResource MenuItemSelectFill}"></Setter>-->
                                <Setter Property="Background" Value="Transparent"></Setter>
                                <Setter Property="BorderThickness" Value="1"></Setter>
                                <Setter Property="Controls:ButtonHelper.CornerRadius" Value="2"></Setter>
                            </Style>
                        </GroupBox.Resources>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="1" Grid.Row="1">

                                <Button x:Name="btn_open_systemoptions"  Width="310" Height="auto" HorizontalAlignment="Left" Margin="0,0,0,10" HorizontalContentAlignment="Left" Click="Btn_open_systemoptions_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FileOutline" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_systemOptions}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btn_open_machinesetup"  Width="310" Height="auto" HorizontalAlignment="Left" Margin="0,0,0,10" HorizontalContentAlignment="Left" Click="Btn_open_machinesetup_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FileOutline" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_machineSetup}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openFormProgram"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Bt_openFormProgram_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_formProgram}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openDiagnoseData"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Bt_openDiagnoseData_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_diagnoseData}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openDiagramSetup"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Bt_openDiagramSetup_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_diagramSetup}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                
                            </StackPanel>

                            <StackPanel Grid.Column="3" Grid.Row="1">

                                <Button x:Name="bt_openPrjectFolder"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Bt_openPrjectFolder_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_machineParameter}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openConfig"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Bt_openConfig_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_config}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openMachineParameter"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Bt_openMachineParameter_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_pojectFolder}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                            </StackPanel>

                            <StackPanel Grid.Column="5" Grid.Row="1">

                                <Button x:Name="bt_simStarten"  Width="310" Height="auto" HorizontalAlignment="Left" Margin="0,0,0,10" HorizontalContentAlignment="Left" Click="Bt_simStarten_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="PlayCircleOutline" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_sim}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_visuStarten"  Width="310" Height="auto" HorizontalAlignment="Left" Margin="0,0,0,10" HorizontalContentAlignment="Left" Click="Bt_visuStarten_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Monitor" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_visu}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Rectangle Width="310" Height="43" HorizontalAlignment="Left" Margin="0,0,0,10" />


                                <Button x:Name="bt_lock_loschen"  Width="310" Height="auto" HorizontalAlignment="Left" Margin="0,0,0,10" HorizontalContentAlignment="Left" Click="Bt_lock_loschen_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Delete" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_puLock}" FontSize="14"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_BackupProject"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Bt_BackupProject_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="ZipBox" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                        <Label Content="{x:Static p:Resources.lb_backup}" FontSize="14"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!--Datein öffnen und Hot Keys-->
                    <Grid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <GroupBox x:Name="gb_me_funktionen" Grid.Column="0" Header="{x:Static p:Resources.gb_helfer_funkionen_me}">
                            <GroupBox.Resources>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButton}">
                                    <!--<Setter Property="Background" Value="{DynamicResource MenuItemSelectFill}"></Setter>-->
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="BorderThickness" Value="1"></Setter>
                                    <Setter Property="Controls:ButtonHelper.CornerRadius" Value="2"></Setter>
                                </Style>
                            </GroupBox.Resources>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="1" Grid.Row="1">

                                    <Button x:Name="btn_open_me_folder"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Btn_open_me_folder_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                            <Label Content="{x:Static p:Resources.lb_me}" FontSize="14"/>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="btn_open_xml_hmi"  Width="310" Height="auto" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,0,0,10" Click="Btn_open_xml_hmi_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="FolderOpen" Width="auto" Height="auto" Margin="0,0,20,0" VerticalAlignment="Center"/>
                                            <Label Content="{x:Static p:Resources.lb_me_xml}" FontSize="14"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!--Hot Keys-->
                        <GroupBox Grid.Column="2" Header="{x:Static p:Resources.gb_hotkeys}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="1" Grid.Row="1">
                                    <Controls:ToggleSwitch x:Name="ts_hotkey"  
                                                           Content="{x:Static p:Resources.tg_hotkey_ein}" 
                                                           Width="auto" 
                                                           HorizontalAlignment="Left" 
                                                           VerticalAlignment="Center"
                                                           IsCheckedChanged="Ts_hotkey_IsCheckedChanged" 
                                                           ToolTip="{x:Static p:Resources.tt_hotkey}" Margin="0,3,0,10"/>

                                    <TextBox x:Name="text_px_nummer" Grid.Column="0" Grid.Row="0" Controls:TextBoxHelper.Watermark="{x:Static p:Resources.tb_px_nummer}" 
                                             Margin="0" 
                                             VerticalContentAlignment="Center" Controls:TextBoxHelper.ClearTextButton="True" Width="245" HorizontalAlignment="Left" 
                                             TextChanged="Text_px_nummer_TextChanged">
                                    </TextBox>

                                </StackPanel>

                                <StackPanel Grid.Column="3" Grid.Row="1">

                                    <DockPanel>
                                        <Label FontWeight="Bold" Margin="0" DockPanel.Dock="Left" Content="{x:Static p:Resources.lb_ctrl_shift}"/>
                                        <ComboBox x:Name="cb_hotkey_pxComment" DockPanel.Dock="Right" Width="80" HorizontalAlignment="Left" SelectionChanged="Cb_hotkey_pxComment_SelectionChanged"/>
                                    </DockPanel>

                                    <Label Content="{x:Static p:Resources.lb_px_comment}" Margin="0,-5,0,0"/>
                                    <Label Foreground="ForestGreen" Margin="0,-10,0,0" Content="{x:Static p:Resources.lb_px}"/>

                                    <DockPanel Margin="0,5,0,0">
                                        <Label FontWeight="Bold" Margin="0" DockPanel.Dock="Left" Content="{x:Static p:Resources.lb_ctrl_shift}"/>
                                        <ComboBox x:Name="cb_hotkey_pxBeginEnd" DockPanel.Dock="Right" Width="80" HorizontalAlignment="Left" SelectionChanged="Cb_hotkey_pxBeginEnd_SelectionChanged"/>
                                    </DockPanel>

                                    <Label Content="{x:Static p:Resources.lb_px_beginend}" Margin="0,-5,0,0"/>
                                    <Label Foreground="ForestGreen" Content="{x:Static p:Resources.lb_px_begin}" Margin="0,-10,0,0"/>
                                    <Label Foreground="SteelBlue" Content="{x:Static p:Resources.lb_px_code}" FontStyle="Italic" Margin="0,-10,0,0"></Label>
                                    <Label Foreground="ForestGreen" Margin="0,-10,0,0" Content="{x:Static p:Resources.lb_px_end}"/>

                                    <DockPanel Margin="0,5,0,0">
                                        <Label FontWeight="Bold" Margin="0" DockPanel.Dock="Left" Content="{x:Static p:Resources.lb_ctrl_shift}"/>
                                        <ComboBox x:Name="cb_hotekey_plain" DockPanel.Dock="Right" Width="80" HorizontalAlignment="Left" SelectionChanged="Cb_hotekey_plain_SelectionChanged"/>
                                    </DockPanel>

                                    <Label Content="{x:Static p:Resources.lb_px_plain}" Margin="0,-5,0,0"/>
                                    <Label Foreground="ForestGreen" Margin="0,-10,0,0" Content="{x:Static p:Resources.lb_px_plain_text}"/>

                                    <DockPanel Margin="0,5,0,0">
                                        <Label FontWeight="Bold" Margin="0" DockPanel.Dock="Left" Content="{x:Static p:Resources.lb_ctrl_shift}"/>
                                        <ComboBox x:Name="cb_hotekey_brackets" DockPanel.Dock="Right" Width="80" HorizontalAlignment="Left" SelectionChanged="Cb_hotekey_brackets_SelectionChanged"/>
                                    </DockPanel>
                                    <Label Content="{x:Static p:Resources.lb_px_brackets}" Margin="0,-5,0,0"/>
                                    <Label Foreground="ForestGreen" Margin="0,-10,0,0" Content="{x:Static p:Resources.lb_px_brackets_text}"/>

                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
