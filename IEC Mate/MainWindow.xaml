<Controls:MetroWindow x:Name="root_window" x:Class="IECMate.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
                      xmlns:p = "clr-namespace:IECMate.Properties"
                      xmlns:toolkit="clr-namespace:System.Windows.Controls;assembly=DotNetProjects.Input.Toolkit"
                      Title="{x:Static p:Resources.app_titel}" MinHeight="900" MinWidth="1200" Height="900" Width="1200" KeyDown="Window_KeyDown"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResizeWithGrip"    
                      Closing="MetroWindow_Closing"
                      GlowBrush="Black"
                      BorderBrush="Black"  
                      WindowTitleBrush="{DynamicResource AccentColorBrush}"
                      NonActiveWindowTitleBrush="{DynamicResource AccentColorBrush3}"
                      NonActiveGlowBrush="Transparent"
                      TitleCaps="False"
                      >

    <!--#region Allgemein-->
    <Controls:MetroWindow.Resources>
        <!--Style für alle Buttons-->
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButton}">
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="Controls:ButtonHelper.CornerRadius" Value="0"></Setter>
        </Style>

        <!--Win10 ToggleSwitch Style-->
        <Style TargetType="{x:Type Controls:ToggleSwitch}" BasedOn="{StaticResource MahApps.Metro.Styles.ToggleSwitch.Win10}"></Style>

        <!--TabControl Style-->
        <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource MetroTabItem}">
            <Setter Property="Controls:ControlsHelper.HeaderFontSize" Value="20"></Setter>
        </Style>

        <!--Textbox der Autocompletebox Style mit Mahapps-->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MetroTextBox}">
            <Setter Property="Controls:TextBoxHelper.Watermark" Value="{x:Static p:Resources.tb_suchen_nach}" />
            <Setter Property="Controls:TextBoxHelper.ClearTextButton" Value="True" />
        </Style>

        <!--Hier wird die grösse des Dropdown der Autocomletebox beschränk. Dies erhöht die Performance erheblich-->
        <Style x:Key="AutoCompleteBoxStyle" TargetType="{x:Type toolkit:AutoCompleteBox}">
            <Style.Resources>
                <Style TargetType="{x:Type ListBox}">
                    <Setter Property="MaxHeight" Value="200" />
                </Style>
            </Style.Resources>
        </Style>

    </Controls:MetroWindow.Resources>

    <!--Style für Min Max und Close Button-->
    <Controls:MetroWindow.WindowButtonCommands>
        <Controls:WindowButtonCommands Style="{DynamicResource MahApps.Metro.Styles.WindowButtonCommands.Win10}" />
    </Controls:MetroWindow.WindowButtonCommands>

    <!--Einstellungs Button oben rechts-->
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <ToggleButton IsChecked="{Binding ElementName=fo_einstellungen, Path=IsOpen}" Cursor="Hand">
                <iconPacks:PackIconMaterial Kind="SettingsOutline" Width="15" Height="15"/>
            </ToggleButton>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <!--#endregion-->
    
    <!--#region Einstellungs Menu-->
    <Controls:MetroWindow.Flyouts>
        
        <Controls:FlyoutsControl>
            <Controls:Flyout x:Name="fo_einstellungen" Header="{x:Static p:Resources.fo_einstellungen}" 
                             Position="Right" Width="350" IsPinned="False" Theme="Adapt">

                <Grid>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <!--Aussehen-->
                    <StackPanel Grid.Column="1" Grid.Row="0">
                        <Label Content="{x:Static p:Resources.lb_aussehen}" FontSize="30" Margin="0"/>
                        
                        <Controls:ToggleSwitch x:Name="tg_theme"
                                               OnLabel="{x:Static p:Resources.tg_theme_hell}" 
                                               OffLabel="{x:Static p:Resources.tg_theme_dunkel}" 
                                               IsCheckedChanged="Tg_theme_IsCheckedChanged" 
                                               Margin="5,0,0,10"/>
                        
                        <ComboBox x:Name="cb_akzent_farbe" Margin="5,0" 
                                  SelectionChanged="Cb_akzent_farbe_SelectionChanged" 
                                  FontSize="15"/>
                    </StackPanel>

                    <!--Editor-->
                    <StackPanel Grid.Column="1" Grid.Row="1">
                       
                        <Label Content="{x:Static p:Resources.lb_editor}" Grid.Column="1" Grid.Row="3" FontSize="30" Margin="0,15,0,0"/>

                        <Controls:ToggleSwitch x:Name="tg_leerzeichen" 
                                               Content="{x:Static p:Resources.tg_leer_ein}" 
                                               IsCheckedChanged="Tg_leerzeichen_IsCheckedChanged" 
                                               Margin="5,0,0,10"/>

                        <Controls:ToggleSwitch x:Name="tg_showtab" 
                                               Content="{x:Static p:Resources.tg_zeigetab}" 
                                               IsCheckedChanged="Tg_showtab_IsCheckedChanged"
                                               Margin="5,0,0,10" />

                        <Controls:ToggleSwitch x:Name="tg_showendofline" 
                                               Content="{x:Static p:Resources.tg_zeigezeilenende}" 
                                               IsCheckedChanged="Tg_showendofline_IsCheckedChanged"
                                               Margin="5,0,0,10" />

                        <Controls:ToggleSwitch x:Name="tg_converttospace" 
                                               Content="{x:Static p:Resources.tg_spaceumwandeln}" 
                                               IsCheckedChanged="Tg_converttospace_IsCheckedChanged" 
                                               Margin="5,0,0,10" />

                        <Controls:ToggleSwitch x:Name="tg_line_no" 
                                               Content="{x:Static p:Resources.tg_line_ein}" 
                                               IsCheckedChanged="Tg_line_no_IsCheckedChanged" 
                                               Margin="5,0,0,10"/>


                        <Controls:NumericUpDown x:Name="nc_font_size" Minimum="8" Maximum="30"
                                                ValueChanged="NumericUpDown_ValueChanged" 
                                                FontSize="15" 
                                                Margin="5,0"
                                                HorizontalContentAlignment="Left"
                                                StringFormat=" {0}   pt."/>

                    </StackPanel>

                    <!--Suche-->
                    <StackPanel Grid.Column="1" Grid.Row="2">
                        <DockPanel Margin="0,15,0,0">
                            <Label Content="{x:Static p:Resources.ti_suche}" FontSize="30" DockPanel.Dock="Left" HorizontalAlignment="Left"/>
                            <Button x:Name="btn_default_ext" Width="30" Height="30" DockPanel.Dock="Right" 
                                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" 
                                    ToolTip="{x:Static p:Resources.tt_file_ext_default}" Click="Btn_default_ext_Click" Focusable="False">
                                <iconPacks:PackIconMaterial Kind="BackupRestore" Width="auto" Height="auto" />
                            </Button>
                        </DockPanel>

                        <Controls:ToggleSwitch x:Name="ts_binar_suche"
                                           Content="{x:Static p:Resources.ts_bin_ein}" 
                                           IsChecked="False" 
                                           ToolTip="{x:Static p:Resources.tt_suche_bin}" 
                                           Margin="5,0,5,10"
                                           IsCheckedChanged="Ts_exakte_suche_IsCheckedChanged"/>
                        
                        <TextBox x:Name="text_file_ext" TextWrapping="Wrap" FontSize="14"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                                 ScrollViewer.VerticalScrollBarVisibility="Auto" 
                                 Controls:TextBoxHelper.Watermark="{x:Static p:Resources.wm_file_ext}" 
                                 Margin="5,0,5,10" Height="70"
                                 ToolTip="{x:Static p:Resources.tt_file_ext}">
                        </TextBox>

                        <Controls:ToggleSwitch x:Name="ts_hw_suchvorschalg"
                                           Content="{x:Static p:Resources.ts_hw_vorschalg}" 
                                           IsChecked="True"  
                                           ToolTip="{x:Static p:Resources.tt_hw_vorschlag}" 
                                           Margin="5,0,5,10" IsCheckedChanged="Ts_hw_suchvorschalg_IsCheckedChanged"/>

                        <Controls:ToggleSwitch x:Name="ts_offnen_nppp"
                                           Content="{x:Static p:Resources.ts_offnen_nppp}" 
                                           IsChecked="True" 
                                           ToolTip="{x:Static p:Resources.tt_offnen_nppp}" 
                                           Margin="5,0"/>
                    </StackPanel>

                    <!--Sprache-->
                    <StackPanel Grid.Column="1" Grid.Row="3">
                        <Label Content="{x:Static p:Resources.lb_sprache}"  FontSize="30" Margin="0,15,0,0"/>
                        <ComboBox x:Name="cb_sprache" Margin="5,0" SelectionChanged="Cb_sprache_SelectionChanged" FontSize="15"/>
                    </StackPanel>

                    <!--Hilfe-->
                    <StackPanel Grid.Column="1" Grid.Row="4">
                        <Label Content="{x:Static p:Resources.dp_hilfe}"  FontSize="30" Margin="0,15,0,-5"/>
                        <Button Click="MenuItem_Click_About" Margin="5,0" BorderThickness="0" HorizontalContentAlignment="Left" Height="42" 
                                Background="Transparent"
                                VerticalContentAlignment="Center">
                            <Label Content="{x:Static p:Resources.dp_hilfe_info}" FontSize="15" FontWeight="Medium" VerticalContentAlignment="Center"/>
                        </Button>

                        <Button x:Name="btn_logfile_offnen" Margin="5,0" BorderThickness="0" HorizontalContentAlignment="Left" Height="42" 
                                Background="Transparent"
                                VerticalContentAlignment="Center" Click="Btn_logfile_offnen_Click"
                                Focusable="False">
                            <Label Content="{x:Static p:Resources.dp_hilfe_log}" FontSize="15" FontWeight="Medium" VerticalContentAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
    </Controls:MetroWindow.Flyouts>
    <!--#endregion-->

    <!--Haupt Grid-->
    <Grid x:Name="RootGrid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <!--#region Info Fenster-->
        <simpleChildWindow:ChildWindow Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" Grid.RowSpan="3"
                                 x:Name="child_Infos"
                                 Title="{x:Static p:Resources.info_titel}"
                                 BorderBrush="{DynamicResource AccentBaseColorBrush}"
                                 BorderThickness="1"
                                 GlowBrush="{DynamicResource AccentColorBrush}"
                                 IsModal="False"
                                 AllowMove="True"
                                 ShowCloseButton="True"
                                 MinHeight="400"
                                 MinWidth="400">

            <StackPanel Margin="20">
                <iconPacks:PackIconMaterial Kind="CodeBraces" Width="30" Height="30" HorizontalAlignment="Center"/>
                <Label Content="{x:Static p:Resources.app_titel}" HorizontalAlignment="Center" FontSize="20" FontFamily="Consola" FontWeight="Bold"/>
                <Label x:Name="lb_version" HorizontalAlignment="Center" FontSize="16" FontFamily="Consola" FontWeight="Bold"/>
                <TextBlock HorizontalAlignment="Center" Margin="0,0,0,20">           
                    <Hyperlink NavigateUri="https://github.com/MrReSc/IEC-Mate" RequestNavigate="Hyperlink_RequestNavigate" >
                        <TextBlock Text="{x:Static p:Resources.info_link_text}"/>
                    </Hyperlink>
                </TextBlock>
                <Label Content="{x:Static p:Resources.lb_lizenz}" HorizontalAlignment="Center" FontSize="16" FontFamily="Consola" FontWeight="Bold"/>
                <TextBox x:Name="text_iecmate_lizenz" FontSize="12" TextWrapping="Wrap" MaxWidth="400" Height="200" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
               
                <Label Content="{x:Static p:Resources.lb_oss_lizenz}" HorizontalAlignment="Center" FontSize="16" FontFamily="Consola" FontWeight="Bold"/>
                <TextBox x:Name="text_lizenzen" FontSize="12" TextWrapping="Wrap" MaxWidth="400" Height="200" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            </StackPanel>
        </simpleChildWindow:ChildWindow>
        <!--#endregion-->

        <!--Alle Tabs-->
        <TabControl x:Name="tc_root" Grid.Column="1" Grid.Row="1" Controls:TabControlHelper.Underlined="SelectedTabItem" 
                    SelectionChanged="Tc_root_SelectionChanged" 
                    Margin="0,5,0,0">
            
            <!--#region Code Tab-->
            <TabItem x:Name="ti_code" Header="{x:Static p:Resources.ti_code}">
                <Grid Margin="0,5,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!--#region Variablenlisten-->
                    <GroupBox Grid.Column="0" Header="{x:Static p:Resources.gb_variablen}">
                      
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Grid.Resources>
                                <!--Style für Textboxen-->
                                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MetroTextBox}">
                                    <Style.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="3"/>
                                        </Style>
                                    </Style.Resources>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="AcceptsReturn" Value="True"/>
                                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                                    <Setter Property="Width" Value="200"/>
                                    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
                                    <Setter Property="AcceptsTab" Value="True"/>
                                    <Setter Property="Padding" Value="2"/>
                                    <Setter Property="IsTabStop" Value="False"/>
                                </Style>
                                <!--Style für Label-->
                                <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MetroLabel}">
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </Grid.Resources>

                            <!--Variable 1-->
                            <Grid Grid.Column="1" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>
                               
                                <DockPanel Grid.Column="0" Grid.Row="0">
                                    <Label Content="{x:Static p:Resources.lb_var1}" DockPanel.Dock="left"/>
                                    <Button x:Name="btn_vaiablenliste_loschen" Width="25" Height="25" 
                                            DockPanel.Dock="Right" Click="Btn_vaiablenliste_loschen_Click" 
                                            HorizontalAlignment="Right">
                                        <iconPacks:PackIconMaterial Kind="close" Width="auto" Height="auto" />
                                    </Button>
                                </DockPanel>

                                <TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" x:Name="text_var1" 
                                         Controls:TextBoxHelper.Watermark="{x:Static p:Resources.tb_var_einfügen}" >
                                </TextBox>
                            </Grid>

                            <!--Variable 2-->
                            <Grid Grid.Column="1" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <Label Content="{x:Static p:Resources.lb_var2}" Grid.Row="0"/>

                                <TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" x:Name="text_var2" 
                                         Controls:TextBoxHelper.Watermark="{x:Static p:Resources.tb_var_einfügen}">
                                </TextBox>
                            </Grid>

                            <!--Variable 3-->
                            <Grid Grid.Column="1" Grid.Row="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <Label Content="{x:Static p:Resources.lb_var3}" Grid.Row="0"/>

                                <TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" x:Name="text_var3" 
                                         Controls:TextBoxHelper.Watermark="{x:Static p:Resources.tb_var_einfügen}">
                                </TextBox>
                            </Grid>
                        </Grid>
                    </GroupBox>
                    <!--#endregion-->

                    <!--Grid für Vorlage und Code-->
                    <Grid  Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" MinHeight="150"/>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="*" MinHeight="150"/>
                        </Grid.RowDefinitions>

                        <!--#region Code Vorlage-->
                        <GroupBox Grid.Column="1" Grid.Row="0" Header="{x:Static p:Resources.gb_code_vorlage}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <Border Grid.Column="1" Grid.Row="3"  BorderThickness="1" Padding="4" BorderBrush="DarkGray" CornerRadius="3">
                                    <avalonEdit:TextEditor  
                                            x:Name="text_code_template" 
                                            Width="auto" Height="auto" IsTabStop="False"
                                            ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
                                            Foreground="{DynamicResource TextBrush}">
                                        <avalonEdit:TextEditor.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="{x:Static p:Resources.dp_datei_import}" Click="Btn_template_offnen_Click"/>
                                                <MenuItem Header="{x:Static p:Resources.dp_datei_speichern}" Click="Btn_template_speichern_Click"/>
                                                <Separator />
                                                <MenuItem Command="Undo" />
                                                <MenuItem Command="Redo" />
                                                <Separator/>
                                                <MenuItem Command="Cut" />
                                                <MenuItem Command="Copy" />
                                                <MenuItem Command="Paste" />
                                            </ContextMenu>
                                        </avalonEdit:TextEditor.ContextMenu>
                                    </avalonEdit:TextEditor>
                                </Border>

                                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">

                                    <StackPanel.Resources>
                                        <!--Style für Button-->
                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButton}">
                                            <Setter Property="Width" Value="25"></Setter>
                                            <Setter Property="Height" Value="25"></Setter>
                                            <Setter Property="BorderThickness" Value="0"></Setter>
                                            <Setter Property="Background" Value="Transparent"></Setter>
                                            <Setter Property="Controls:ButtonHelper.CornerRadius" Value="0"></Setter>
                                            <Setter Property="Focusable" Value="False"></Setter>
                                        </Style>
                                    </StackPanel.Resources>
                                    
                                    <TextBox x:Name="text_suchen" Width="200" Margin="0,0,20,0" 
                                             VerticalContentAlignment="Center" Controls:TextBoxHelper.Watermark="{x:Static p:Resources.tb_suchen_nach}"
                                             Controls:TextBoxHelper.ClearTextButton="True">
                                    </TextBox>
                                    
                                    <ComboBox x:Name="combo_vars" 
                                              BorderBrush="LightGray" Width="135" Margin="0,0,5,0" VerticalContentAlignment="Center" 
                                              HorizontalContentAlignment="Left" 
                                              Controls:TextBoxHelper.Watermark="{x:Static p:Resources.cb_var_auswahlen}">
                                    </ComboBox>

                                    <Button x:Name="btn_ersetzten_ein" Margin="0" Click="Btn_ersetzten_ein_Click">
                                        <iconPacks:PackIconMaterial Kind="ArrowRightBold" Width="18" Height="auto"/>
                                    </Button>

                                    <Button x:Name="btn_ersetzten" Click="Btn_ersetzten_Click">
                                        <iconPacks:PackIconMaterial Kind="RotateRight" Width="auto" Height="auto"/>
                                    </Button>

                                    <Border Width="2" BorderBrush="{DynamicResource GrayBrush9}" BorderThickness="1" CornerRadius="1" Height="22" Margin="2,0"/>

                                    <Button x:Name="btn_gen" Click="Btn_gen_Click" Margin="0" Width="auto" >
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Height="auto" Width="auto">
                                            <iconPacks:PackIconMaterial Kind="Play" Foreground="LimeGreen" VerticalAlignment="Center" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="0"/>
                                            <Label Height="25" VerticalAlignment="Center" Content="{x:Static p:Resources.lb_genereieren}"/>
                                        </StackPanel>
                                    </Button>

                                    <Border Width="2" BorderBrush="{DynamicResource GrayBrush9}" BorderThickness="1" CornerRadius="1" Height="22" Margin="2,0"/>

                                    <Button Click="Btn_template_offnen_Click">
                                        <iconPacks:PackIconMaterial Kind="Import" Width="auto" Height="auto" Foreground="Chocolate"/>
                                    </Button>

                                    <Button Click="Btn_template_speichern_Click">
                                        <iconPacks:PackIconMaterial Kind="ContentSave" Width="auto" Height="auto" Foreground="DodgerBlue"/>
                                    </Button>

                                    <Border Width="2" BorderBrush="{DynamicResource GrayBrush9}" BorderThickness="1" CornerRadius="1" Height="22" Margin="2,0"/>

                                    <Button x:Name="btn_template_loschen" Click="Btn_template_loschen_Click">
                                        <iconPacks:PackIconMaterial Kind="close" Width="auto" Height="auto"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        <!--#endregion-->

                        <!--Gridsplitter mit Textbox für das Zeichen-->
                        <GridSplitter Grid.Column="1" Grid.Row="1" Height="7" 
                                      HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Center"
                                      Background="{DynamicResource GrayBrush9}"/>

                        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">

                            <StackPanel.Resources>
                                <Style TargetType="{x:Type Rectangle}">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                                    <Setter Property="Height" Value="1"></Setter>
                                    <Setter Property="Width" Value="40"></Setter>
                                    <Setter Property="IsHitTestVisible" Value="False"></Setter>
                                </Style>
                            </StackPanel.Resources>
                            
                            <Rectangle Fill="{DynamicResource GrayBrush4}" Stroke="{DynamicResource GrayBrush4}"/>
                            <Rectangle Fill="Transparent" Stroke="Transparent"/>
                            <Rectangle Fill="{DynamicResource GrayBrush4}" Stroke="{DynamicResource GrayBrush4}"/>
                        </StackPanel>

                        <!--#region Code gen-->
                        <GroupBox Grid.Column="1" Grid.Row="3" Header="{x:Static p:Resources.ti_code}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="3" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <Border x:Name="border_code_output" Grid.Column="1" Grid.Row="3"  BorderThickness="1" Padding="4" 
                                        CornerRadius="3" Background="{DynamicResource GrayBrush8}" BorderBrush="{DynamicResource GrayBrush8}">
                                    <avalonEdit:TextEditor  
                                            x:Name="text_code_output" 
                                            Width="auto" Height="auto"
                                            Background="{DynamicResource GrayBrush8}"
                                            Foreground="{DynamicResource TextBrush}"
                                            ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" IsTabStop="False">
                                        <avalonEdit:TextEditor.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="{x:Static p:Resources.mi_in_clipboard}" Click="CopyToClipboard_Click_1" />
                                                <Separator />
                                                <MenuItem Header="{x:Static p:Resources.dp_datei_code_speichern}" Click="Btn_gen_speichern_Click"/>
                                            </ContextMenu>
                                        </avalonEdit:TextEditor.ContextMenu>
                                    </avalonEdit:TextEditor>
                                </Border>

                                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal">

                                    <StackPanel.Resources>
                                        <!--Style für Button-->
                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButton}">
                                            <Setter Property="Width" Value="25"></Setter>
                                            <Setter Property="Height" Value="25"></Setter>
                                            <Setter Property="BorderThickness" Value="0"></Setter>
                                            <Setter Property="Background" Value="Transparent"></Setter>
                                            <Setter Property="Controls:ButtonHelper.CornerRadius" Value="0"></Setter>
                                            <Setter Property="Focusable" Value="False"></Setter>
                                        </Style>
                                    </StackPanel.Resources>

                                    <Button Click="CopyToClipboard_Click_1" ToolTip="{x:Static p:Resources.tt_code_gen_copy}">
                                        <iconPacks:PackIconMaterial Kind="ContentCopy" Width="auto" Height="auto"/>
                                    </Button>

                                    <Button Click="Btn_gen_speichern_Click" >
                                        <iconPacks:PackIconMaterial Kind="ContentSave" Width="auto" Height="auto" Foreground="DodgerBlue"/>
                                    </Button>

