                                        <iconPacks:PackIconMaterial Kind="FileOutline"/>
                                        <Label Content="{x:Static p:Resources.lb_systemOptions}"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btn_open_machinesetup" Click="Btn_open_machinesetup_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FileOutline"/>
                                        <Label Content="{x:Static p:Resources.lb_machineSetup}"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openFormProgram" Click="Bt_openFormProgram_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                        <Label Content="{x:Static p:Resources.lb_formProgram}"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openDiagnoseData" Click="Bt_openDiagnoseData_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                        <Label Content="{x:Static p:Resources.lb_diagnoseData}"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openDiagramSetup" Click="Bt_openDiagramSetup_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                        <Label Content="{x:Static p:Resources.lb_diagramSetup}"/>
                                    </StackPanel>
                                </Button>

                                
                            </StackPanel>

                            <StackPanel Grid.Column="3" Grid.Row="1">

                                <Button x:Name="bt_openPrjectFolder" Click="Bt_openPrjectFolder_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                        <Label Content="{x:Static p:Resources.lb_machineParameter}"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openConfig" Click="Bt_openConfig_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                        <Label Content="{x:Static p:Resources.lb_config}"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_openMachineParameter" Click="Bt_openMachineParameter_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                        <Label Content="{x:Static p:Resources.lb_pojectFolder}"/>
                                    </StackPanel>
                                </Button>

                            </StackPanel>

                            <StackPanel Grid.Column="5" Grid.Row="1">

                                <Button x:Name="bt_simStarten" Click="Bt_simStarten_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="PlayCircleOutline"/>
                                        <Label Content="{x:Static p:Resources.lb_sim}" />
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_visuStarten" Click="Bt_visuStarten_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Monitor"/>
                                        <Label Content="{x:Static p:Resources.lb_visu}"/>
                                    </StackPanel>
                                </Button>

                                <Rectangle Width="310" Height="43" HorizontalAlignment="Left" Margin="0,0,0,10" />

                                <Button x:Name="bt_lock_loschen" Click="Bt_lock_loschen_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="Delete"/>
                                        <Label Content="{x:Static p:Resources.lb_puLock}"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="bt_BackupProject" Click="Bt_BackupProject_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconMaterial Kind="ZipBox"/>
                                        <Label Content="{x:Static p:Resources.lb_backup}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <!--#endregion-->

                    <!--Datein öffnen und Hot Keys-->
                    <Grid Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="20" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <!--#region Datein ME öffnen-->
                        <GroupBox x:Name="gb_me_funktionen" Grid.Column="0" Header="{x:Static p:Resources.gb_helfer_funkionen_me}">
                            <GroupBox.Resources>
                                <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButton}">
                                    <Setter Property="Background" Value="Transparent"></Setter>
                                    <Setter Property="BorderThickness" Value="1"></Setter>
                                    <Setter Property="Controls:ButtonHelper.CornerRadius" Value="2"></Setter>
                                    <Setter Property="Width" Value="310"></Setter>
                                    <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                                    <Setter Property="Margin" Value="0,0,0,10"></Setter>
                                    <Setter Property="Focusable" Value="False"></Setter>
                                </Style>

                                <Style TargetType="{x:Type Label}" BasedOn="{StaticResource MetroLabel}">
                                    <Setter Property="FontSize" Value="14"></Setter>
                                </Style>

                                <Style TargetType="{x:Type iconPacks:PackIconMaterial}">
                                    <Setter Property="Width" Value="auto"></Setter>
                                    <Setter Property="Height" Value="auto"></Setter>
                                    <Setter Property="Margin" Value="0,0,20,0"></Setter>
                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                </Style>

                            </GroupBox.Resources>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="1" Grid.Row="1">

                                    <Button x:Name="btn_open_me_folder" Click="Btn_open_me_folder_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                            <Label Content="{x:Static p:Resources.lb_me}" />
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="btn_open_xml_hmi" Click="Btn_open_xml_hmi_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                                            <Label Content="{x:Static p:Resources.lb_me_xml}"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        <!--#endregion-->

                        <!--#region Hot Keys-->
                        <GroupBox Grid.Column="2" Header="{x:Static p:Resources.gb_hotkeys}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="1" Grid.Row="1">
                                    <Controls:ToggleSwitch x:Name="ts_hotkey"  
                                                           Content="{x:Static p:Resources.tg_hotkey_ein}" 
                                                           Width="auto" 
                                                           HorizontalAlignment="Left" 
                                                           VerticalAlignment="Center"
                                                           IsCheckedChanged="Ts_hotkey_IsCheckedChanged" 
                                                           ToolTip="{x:Static p:Resources.tt_hotkey}" Margin="0,3,0,10"/>

                                    <TextBox x:Name="text_px_nummer" Grid.Column="0" Grid.Row="0" Controls:TextBoxHelper.Watermark="{x:Static p:Resources.tb_px_nummer}" 
                                             Margin="0" 
                                             VerticalContentAlignment="Center" Controls:TextBoxHelper.ClearTextButton="True" Width="245" HorizontalAlignment="Left" 
                                             TextChanged="Text_px_nummer_TextChanged">
                                    </TextBox>

                                </StackPanel>

                                <StackPanel Grid.Column="3" Grid.Row="1">

                                    <DockPanel>
                                        <Label FontWeight="Bold" Margin="0" DockPanel.Dock="Left" Content="{x:Static p:Resources.lb_ctrl_shift}"/>
                                        <ComboBox x:Name="cb_hotkey_pxComment" DockPanel.Dock="Right" Width="80" HorizontalAlignment="Left" SelectionChanged="Cb_hotkey_pxComment_SelectionChanged"/>
                                    </DockPanel>

                                    <Label Content="{x:Static p:Resources.lb_px_comment}" Margin="0,-5,0,0"/>
                                    <Label Foreground="ForestGreen" Margin="0,-10,0,0" Content="{x:Static p:Resources.lb_px}"/>

                                    <DockPanel Margin="0,5,0,0">
                                        <Label FontWeight="Bold" Margin="0" DockPanel.Dock="Left" Content="{x:Static p:Resources.lb_ctrl_shift}"/>
                                        <ComboBox x:Name="cb_hotkey_pxBeginEnd" DockPanel.Dock="Right" Width="80" HorizontalAlignment="Left" SelectionChanged="Cb_hotkey_pxBeginEnd_SelectionChanged"/>
                                    </DockPanel>

                                    <Label Content="{x:Static p:Resources.lb_px_beginend}" Margin="0,-5,0,0"/>
                                    <Label Foreground="ForestGreen" Content="{x:Static p:Resources.lb_px_begin}" Margin="0,-10,0,0"/>
                                    <Label Foreground="SteelBlue" Content="{x:Static p:Resources.lb_px_code}" FontStyle="Italic" Margin="0,-10,0,0"></Label>
                                    <Label Foreground="ForestGreen" Margin="0,-10,0,0" Content="{x:Static p:Resources.lb_px_end}"/>

                                    <DockPanel Margin="0,5,0,0">
                                        <Label FontWeight="Bold" Margin="0" DockPanel.Dock="Left" Content="{x:Static p:Resources.lb_ctrl_shift}"/>
                                        <ComboBox x:Name="cb_hotekey_plain" DockPanel.Dock="Right" Width="80" HorizontalAlignment="Left" SelectionChanged="Cb_hotekey_plain_SelectionChanged"/>
                                    </DockPanel>

                                    <Label Content="{x:Static p:Resources.lb_px_plain}" Margin="0,-5,0,0"/>
                                    <Label Foreground="ForestGreen" Margin="0,-10,0,0" Content="{x:Static p:Resources.lb_px_plain_text}"/>

                                    <DockPanel Margin="0,5,0,0">
                                        <Label FontWeight="Bold" Margin="0" DockPanel.Dock="Left" Content="{x:Static p:Resources.lb_ctrl_shift}"/>
                                        <ComboBox x:Name="cb_hotekey_brackets" DockPanel.Dock="Right" Width="80" HorizontalAlignment="Left" SelectionChanged="Cb_hotekey_brackets_SelectionChanged"/>
                                    </DockPanel>
                                    <Label Content="{x:Static p:Resources.lb_px_brackets}" Margin="0,-5,0,0"/>
                                    <Label Foreground="ForestGreen" Margin="0,-10,0,0" Content="{x:Static p:Resources.lb_px_brackets_text}"/>

                                </StackPanel>
                            </Grid>
                        </GroupBox>
                        <!--#endregion-->
                        
                    </Grid>
                </Grid>
            </TabItem>
            <!--#endregion-->
            
        </TabControl>
    </Grid>
</Controls:MetroWindow>
